FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "constant";
    object      kinematicCloudProperties;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

kinematicCloud
{
    injectionModels
    (
        cone
        {
            type            cone;
            position        (0 0 10);    // Center of inlet patch
            direction       (0 0 1);     // Direction of injection
            coneAngle       20;
            U0              30;
            duration        0.1;
            parcelsPerSecond 10000;
            
            sizeDistribution
            {
                type        logNormal;
                median      3e-06;
                sigma       0.4;
            }
        }
    );

    particleProperties
    {
        rho             1000;
    }
}

